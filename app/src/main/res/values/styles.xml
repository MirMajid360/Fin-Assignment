<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_theme_color</item>
        // action bar color
        <item name="colorPrimaryDark">@color/app_theme_color</item>// status bar color
        <item name="colorAccent">@color/app_black</item>
        // cursor color
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:layout_margin">@dimen/_10sdp</item> <!-- Add your desired padding here -->
    </style>

    <style name="AppTheme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/app_white</item>
        // action bar color
        <item name="colorPrimaryDark">@color/app_white</item>// status bar color
        <item name="colorAccent">@color/app_black</item>
        // cursor color
    </style>

    <style name="Button" parent="AppTheme">
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Text_18_Black_Bold" parent="AppTheme">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="fontWeight">500</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:maxLength">45</item>
        <item name="android:maxLines">1</item>-->
        <item name="cursorColor">@color/grey</item>
        <item name="android:textColorHint">@color/text_hint_grey</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_2sdp</item>
        <item name="android:textColor">@color/app_black</item>
    </style>




</resources>